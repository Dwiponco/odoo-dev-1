<odoo>
    <!-- Tree view for the property offers -->
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.view.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_accept" type="object" class="btn-success" string="" icon="fa-check" title="Accept"/>
                <button name="action_refuse" type="object" class="btn-danger" string="" icon="fa-times" title="Refuse"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- Form view for the property offers -->
    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>