<odoo>
    <!-- Action to open the properties -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Search view for the properties -->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="active"/>
                <field name="state"/>
                <field name="property_type_id"/>
                <filter name="state" domain="[('state', 'in', ['new', 'offer_received'])]"/>
                <filter name="postcode" context="{'group_by': 'postcode'}"/>
            </search>
        </field>
    </record>

    <!-- Tree view for the properties -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="active"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form view for the properties -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_sold" type="object" class="btn-primary" string="Sold"/>
                    <button name="action_canceled" type="object" string="Cancel"/>
                </header>
                <sheet>
                    <div class="o_address_format">
                        <h1>
                            <field name="name"/>
                        </h1>
                        <field name="tag_ids" widget="many2many_tags" class="pb-2"/>
                    </div>
                    <group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="state" groups="base.group_no_one"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field name="offer_ids"/>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesperson_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>